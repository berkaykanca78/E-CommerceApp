{
  "ConnectionStrings": {
    "DefaultConnection": "Server=$(DB_SERVER);Database=$(DB_NAME);User Id=$(DB_USER);Password=$(DB_PASSWORD);TrustServerCertificate=True;Connection Timeout=30;Command Timeout=60;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "ApplicationName": "ECommerce API",
    "Version": "1.0.0",
    "SupportEmail": "support@berkaykanca.com"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://e-ticaret.berkaykanca.com",
      "https://www.berkaykanca.com"
    ]
  },
  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": 31536000 
  }
} 